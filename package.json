{
  "name": "hachi",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.0",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@hachi/web",
    "dev:api": "turbo dev --filter=@hachi/api",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "db:generate": "turbo db:generate --filter=@hachi/database",
    "db:migrate": "turbo db:migrate --filter=@hachi/database",
    "db:push": "turbo db:push --filter=@hachi/database",
    "db:studio": "turbo db:studio --filter=@hachi/database"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "turbo": "^2.6.1",
    "typescript": "catalog:"
  },
  "catalog": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/bun": "^1.3.3",
    "typescript": "^5.7.2",
    "zod": "^3.24.1",
    "drizzle-orm": "^0.38.2",
    "hono": "^4.6.14",
    "@tanstack/react-query": "^5.62.7",
    "ai": "^4.3.0",
    "@ai-sdk/openai": "^1.3.0",
    "@mastra/pg": "^0.17.9",
    "@mastra/pinecone": "^0.11.17",
    "@mastra/qdrant": "^0.11.19",
    "@mastra/chroma": "^0.11.18",
    "@mastra/upstash": "^0.15.9",
    "@mastra/mongodb": "^0.14.10",
    "zustand": "^5.0.8"
  },
  "catalogs": {
    "ui": {
      "tailwindcss": "^4.0.0",
      "@radix-ui/react-slot": "^1.1.1",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "tailwind-merge": "^2.6.0",
      "lucide-react": "^0.468.0"
    },
    "flow": {
      "@xyflow/react": "^12.3.6"
    }
  }
}
