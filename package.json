{
  "name": "hachi",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.0",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:web": "bun run --filter @hachi/web dev",
    "dev:api": "bun run --filter @hachi/api dev",
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "db:generate": "bun run --filter @hachi/database generate",
    "db:migrate": "bun run --filter @hachi/database migrate",
    "db:push": "bun run --filter @hachi/database push",
    "db:studio": "bun run --filter @hachi/database studio"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.2"
  },
  "catalog": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.1",
    "drizzle-orm": "^0.38.2",
    "hono": "^4.6.14",
    "@tanstack/react-query": "^5.62.7"
  },
  "catalogs": {
    "ui": {
      "tailwindcss": "^4.0.0",
      "@radix-ui/react-slot": "^1.1.1",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "tailwind-merge": "^2.6.0",
      "lucide-react": "^0.468.0"
    },
    "flow": {
      "@xyflow/react": "^12.3.6"
    }
  }
}
